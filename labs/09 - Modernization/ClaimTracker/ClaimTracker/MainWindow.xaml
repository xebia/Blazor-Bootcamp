<Window x:Class="ClaimTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClaimTracker"
        mc:Ignorable="d"
        Title="Claims Tracker - Insurance Claims Management" 
        Height="600" Width="1000"
        Style="{StaticResource MainWindowStyle}"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" 
              Style="{StaticResource StandardMenu}">
            <MenuItem Header="_File" 
                     Style="{StaticResource StandardMenuItem}">
                <MenuItem Header="E_xit" 
                         Click="Exit_Click"
                         Style="{StaticResource StandardMenuItem}"/>
            </MenuItem>
            <MenuItem Header="_Claims" 
                     Style="{StaticResource StandardMenuItem}">
                <MenuItem Header="_View All Claims" 
                         Click="ViewClaims_Click"
                         Style="{StaticResource StandardMenuItem}"/>
                <Separator Style="{StaticResource StandardSeparator}"/>
                <MenuItem Header="_Add New Claim" 
                         Click="AddNewClaim_Click"
                         Style="{StaticResource StandardMenuItem}"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" 
                  Style="{StaticResource StandardStatusBar}">
            <StatusBarItem>
                <TextBlock Text="Ready" Name="StatusText"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area -->
        <!-- Traditional WPF pattern: Content area that loads different pages/controls -->
        <Border Name="ContentArea" 
                Background="{StaticResource BackgroundGrayBrush}">
            <!-- Default blank page - content will be loaded dynamically -->
            <TextBlock Text="Welcome to Claims Tracker" 
                      Style="{StaticResource PageTitle}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Foreground="{StaticResource MediumGrayBrush}"/>
        </Border>
    </DockPanel>
</Window>
