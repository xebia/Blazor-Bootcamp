<Window x:Class="ClaimTracker.Windows.AddEditClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClaimTracker.Windows"
        mc:Ignorable="d"
        Title="Add New Claim" 
        Height="600" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MainWindowStyle}"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBlueBrush}" 
                Padding="20,15">
            <TextBlock Name="WindowTitle"
                      Text="Add New Claim" 
                      FontSize="20" 
                      FontWeight="SemiBold"
                      Foreground="{StaticResource WhiteBrush}"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <StackPanel>
                <!-- Validation Error Display -->
                <Border Name="ValidationErrorPanel"
                       Style="{StaticResource ValidationErrorPanel}"
                       Margin="0,0,0,20"
                       Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Please correct the following errors:"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource ErrorTextBrush}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Name="ValidationErrorText"
                                  TextWrapping="Wrap"
                                  Foreground="{StaticResource ErrorTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Claim Number -->
                <Label Style="{StaticResource RequiredLabel}" 
                       Content="Claim Number *" 
                       Target="{Binding ElementName=ClaimNumberTextBox}"/>
                <TextBox Name="ClaimNumberTextBox"
                        Style="{StaticResource StandardTextBox}"
                        MaxLength="50"
                        Margin="0,0,0,15"/>

                <!-- Policy Holder Name -->
                <Label Style="{StaticResource RequiredLabel}" 
                       Content="Policy Holder Name *" 
                       Target="{Binding ElementName=PolicyHolderNameTextBox}"/>
                <TextBox Name="PolicyHolderNameTextBox"
                        Style="{StaticResource StandardTextBox}"
                        MaxLength="100"
                        Margin="0,0,0,15"/>

                <!-- Date of Incident -->
                <Label Style="{StaticResource RequiredLabel}" 
                       Content="Date of Incident *" 
                       Target="{Binding ElementName=DateOfIncidentPicker}"/>
                <DatePicker Name="DateOfIncidentPicker"
                           Style="{StaticResource StandardDatePicker}"
                           Margin="0,0,0,15"/>
                <TextBlock Text="Must be a date in the past"
                          FontSize="11"
                          Foreground="{StaticResource MediumGrayBrush}"
                          Margin="0,-10,0,15"/>

                <!-- Date Filed -->
                <Label Style="{StaticResource RequiredLabel}" 
                       Content="Date Filed *" 
                       Target="{Binding ElementName=DateFiledPicker}"/>
                <DatePicker Name="DateFiledPicker"
                           Style="{StaticResource StandardDatePicker}"
                           Margin="0,0,0,15"/>

                <!-- Claim Amount -->
                <Label Style="{StaticResource RequiredLabel}" 
                       Content="Claim Amount *" 
                       Target="{Binding ElementName=ClaimAmountTextBox}"/>
                <TextBox Name="ClaimAmountTextBox"
                        Style="{StaticResource StandardTextBox}"
                        Margin="0,0,0,15"/>
                <TextBlock Text="Must be greater than 0"
                          FontSize="11"
                          Foreground="{StaticResource MediumGrayBrush}"
                          Margin="0,-10,0,15"/>

                <!-- Status -->
                <Label Style="{StaticResource RequiredLabel}" 
                       Content="Status *" 
                       Target="{Binding ElementName=StatusComboBox}"/>
                <ComboBox Name="StatusComboBox"
                         Style="{StaticResource StandardComboBox}"
                         Margin="0,0,0,15">
                    <ComboBoxItem Content="Pending"/>
                    <ComboBoxItem Content="Processing"/>
                    <ComboBoxItem Content="Approved"/>
                    <ComboBoxItem Content="Denied"/>
                </ComboBox>

                <!-- Description -->
                <Label Style="{StaticResource StandardLabel}" 
                       Content="Description (Optional)" 
                       Target="{Binding ElementName=DescriptionTextBox}"/>
                <TextBox Name="DescriptionTextBox"
                        Style="{StaticResource StandardTextBox}"
                        MaxLength="500"
                        Height="100"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        Margin="0,0,0,10"/>
                <TextBlock Text="Maximum 500 characters"
                          FontSize="11"
                          Foreground="{StaticResource MediumGrayBrush}"
                          Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="{StaticResource BackgroundGrayBrush}"
                BorderBrush="{StaticResource LightGrayBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Style="{StaticResource SecondaryButton}"
                       Content="Cancel"
                       Click="Cancel_Click"
                       Width="100"
                       Margin="0,0,10,0"/>
                <Button Name="SaveButton"
                       Style="{StaticResource PrimaryButton}"
                       Content="Save Claim"
                       Click="Save_Click"
                       Width="120"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
